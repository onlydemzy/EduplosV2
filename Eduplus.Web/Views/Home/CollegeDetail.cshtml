@model Eduplus.Web.ViewModels.FacultyArticleViewModel
@{
    ViewBag.Title = "College";
}

<div style="max-width:100%;">
  <section>
      @if (ViewBag.Photo != null)
            {
                var base64 = Convert.ToBase64String(@ViewBag.photo);
                var imgSrc = String.Format("data:image/jpeg;base64,{0}", base64);
          <img src='@imgSrc' style="width:100%; max-height:200px;" />

      }
    </section> 
    <h4>Welcome to the Faculty of @Html.DisplayFor(a => a.Title)</h4>
    <hr />
    
    <div id="cont" style="text-align:justify; margin-left:5px;">
        @Html.Raw(Model.Content)
    </div>
    <span style="background-color:#08581b; color:#ffffff; font-weight:200">Faculty is Made up of the following Departments</span>
    @if (Model.Departments != null)
    {
        foreach (var d in Model.Departments)
        {<h3></h3>

            <a href='@Url.Action("InfoView", "Home",new {view=d.Title})'>@d.Title</a>
            
        }
    }
    
</div>


