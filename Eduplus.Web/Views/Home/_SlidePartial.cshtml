@model IEnumerable<Eduplus.Domain.CoreModule.AppImages>

<div id="slider1_container" style="visibility: hidden; position: relative; margin-top:-19px;margin-left:0px;margin-right:0px; padding-right:0px; width: 1140px; height: 552px; overflow: hidden; clear:both; ">

    <!-- Loading Screen -->
    <div u="loading" style="position: absolute; top: 0px; left: 0px;">
        <div style="filter: alpha(opacity=70); opacity:0.7; position: absolute; display: block;

                                background-color: #000; top: 0px; left: 0px;width: 100%; height:100%;">
        </div>

    </div>

    <!-- Slides Container -->
    <div u="slides" style="cursor: move; position: absolute; left: 0px; top: 0px; width: 1140px; height: 552px;
                             overflow: hidden;">
        @foreach (var item in Model)
        {
               var base64 = Convert.ToBase64String(item.Foto);
                var imgSrc = String.Format("data:image/jpeg;base64,{0}", base64);
            <div>
                <img u="image" src2='@imgSrc' />
                
            </div>
            

        }
        
    </div>

    <style>
        .jssorb05 {
            position: absolute;
        }

            .jssorb05 div, .jssorb05 div:hover, .jssorb05 .av {
                position: absolute;
                /* size of bullet elment */
                width: 16px;
                height: 16px;
                background: url(../Content/slide/images/b05.png) no-repeat;
                overflow: hidden;
                cursor: pointer;
            }

            .jssorb05 div {
                background-position: -7px -7px;
            }

                .jssorb05 div:hover, .jssorb05 .av:hover {
                    background-position: -37px -7px;
                }

            .jssorb05 .av {
                background-position: -67px -7px;
            }

            .jssorb05 .dn, .jssorb05 .dn:hover {
                background-position: -97px -7px;
            }
    </style>
    <!-- bullet navigator container -->
    <div u="navigator" class="jssorb05" style="bottom: 16px; right: 6px;">
        <!-- bullet navigator item prototype -->
        <div u="prototype"></div>
    </div>

    <style>
        .jssora11l, .jssora11r {
            display: block;
            position: absolute;
            /* size of arrow element */
            width: 37px;
            height: 37px;
            cursor: pointer;
            background: url(../Content/slide/images/a11.png) no-repeat;
            overflow: hidden;
        }

        .jssora11l {
            background-position: -11px -41px;
        }

        .jssora11r {
            background-position: -71px -41px;
        }

        .jssora11l:hover {
            background-position: -131px -41px;
        }

        .jssora11r:hover {
            background-position: -191px -41px;
        }

        .jssora11l.jssora11ldn {
            background-position: -251px -41px;
        }

        .jssora11r.jssora11rdn {
            background-position: -311px -41px;
        }
    </style>
    <!-- Arrow Left -->
    <span u="arrowleft" class="jssora11l" style="top: 123px; left: 8px;">
    </span>
    <!-- Arrow Right -->
    <span u="arrowright" class="jssora11r" style="top: 123px; right: 8px;">
    </span>

</div>

