 
@{
    ViewBag.Title = "Register Course";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}
<div class="container">
    <h3>Semester Course Registration</h3>
    <div class="row">
         
        <div class="col-md-3">
            <select data-bind="value:sessionId,options:sessions,optionsValue:'SessionId',optionsText:'Title',optionsCaption:'Choose Session'" class="form-control"></select>
        </div>


        <div class="col-md-3">
            <select data-bind="value:semesterId,options:semesters,optionsValue:'SemesterId',optionsText:'Title',optionsCaption:'Choose Semester'" class="form-control"></select>
        </div>

            
        
            <div class="col-md-3">
                <select data-bind="value:level,options:Levels,optionsCaption:'Choose your current Level'" class="form-control"></select>
            </div>
    
    </div>
    <div class="row">
         
       
        <div class="col-md-3">
            <input type="text" data-bind="value:studentId" placeholder="Enter Matric No or Student ID" class="form-control" />
        </div>

     

            <div class="col-md-5">
                <a class="btn btn-success" data-bind="click: $root.fetchCourse,disabled:Kill" href="#" title="register"><i class="glyphicon glyphicon-save"></i>Fetch Courses</a>
                <img src="~/Content/images/wait24.gif" data-bind="visible:spinar"/> 
            </div>
 
    </div>
    
        <div class="row">
            <div class="col-md-9">
                <hr />
                <table class="table table-responsive">
                    <thead>
                        <tr>
                            <th>Code</th>
                            <th>Title</th>
                            <th>Unit</th>
                            <th>type</th>
                        </tr>
                    </thead>
                    <tbody data-bind="foreach:courses">
                        <tr>
                            <td data-bind="text:CourseCode"></td>
                            <td data-bind="text:Title"></td>
                            <td data-bind="text:CreditHour"></td>
                            <td data-bind="text:Type"></td>
                            <td data-bind="ifnot:IsOutStanding">
                                <button data-bind="click:$root.removeCourse" class="btn btn-danger">Remove</button>
                            </td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td class="buttons">
                                <a class="btn btn-success" data-bind="click: $root.addAdditionalCourses" href="#" title="add"><i class="glyphicon glyphicon-plus-sign"></i>Add More Courses</a>

                            </td>
                        </tr>
                       <tr id="t1">
                           <td><select data-bind="value:addedCourse,options:additionalCourses,optionsText:'CourseCode',optionsCaption:'-Select Course-'" class="form-control"></select></td>
                           <td data-bind="with:addedCourse"><span data-bind="text:Title"></span></td>
                           <td data-bind="with:addedCourse"><span data-bind="text:CreditHour"></span></td>
                           <td data-bind="with:addedCourse"><span data-bind="text:Type"></span></td>
                           <td  class="button">
                               <a class="btn btn-success" data-bind="click:$root.addCourse" ><i class="glyphicon glyphicon-plus-sign"></i> Add</a>
                           </td>
                       </tr>
                        <tr>
                            <td style="font-weight:bold">Total</td>
                            <td>
                               
                            </td>
                            <td style="font-weight:bold" data-bind="text:$root.totalUnit"></td>
                        </tr>
                        <tr>
                            <td class="buttons">
                                <a class="btn btn-success" data-bind="click: $root.register,disable:spinar" href="#" title="register"><i class="glyphicon glyphicon-save"></i>Submit</a>
                                <img src="~/Content/images/wait24.gif" data-bind="visible:spinar" />
                            </td>
                            <td></td>
                            <td class="buttons">
                                <a class="btn btn-danger" data-bind="click: $root.reset" href="#" title="edit"><i class="glyphicon glyphicon-edit"></i>Cancel</a>

                            </td>
                        </tr>
                    </tfoot>
                </table>
                
            </div>
        </div>

    
</div>



@Scripts.Render("~/Scripts/ViewModels/internalcourseRegistrationVM.js")

