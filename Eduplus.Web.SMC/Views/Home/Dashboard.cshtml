
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
     @model Eduplus.Web.SMC.ViewModels.StatDashboardViewModel
    @{Layout = null; }
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Eduplos</title>
    @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/sb-admin-2.min.css" rel="stylesheet" />
</head>

<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Sidebar -->
        <!--Insert menu here-->
        @Html.Action("_MenuPartial", "Home");
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>
                    <h1 class="h5 mb-0 text-success d-none d-sm-inline-block mr-auto ml-md-3 my-2 my-md-0 mw-100">SCHOOL MANAGEMENT CENTRE</h1>
                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">



                        <div class="topbar-divider d-none d-sm-block"></div>
                        <!-- Nav Item - User Information -->
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="mr-2 d-none d-lg-inline text-gray-600 small">Hello!<br> @User.FullName</span>
                                <i class="fas fa-user fa-2x btn btn-primary btn-circle"></i>

                                <!-- <img class="img-profile rounded-circle" src="https://source.unsplash.com/QAB-WJcbgJk/60x60"> -->
                            </a>
                            <!-- Dropdown - User Information -->
                            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
                                <a class="dropdown-item" href="blank.html">
                                    <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Profile
                                </a>
                                <a class="dropdown-item" href="blank.html">
                                    <i class="fas fa-cogs fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Settings
                                </a>

                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="@Url.Action("LogOut","Accounts")">
                                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Log out
                                </a>
                            </div>
                        </li>
                    </ul>
                </nav>
                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                <div class="container-fluid">


                    <div class="row">
                        <div class="col-xl-6 col-lg-6 col-md-6">
                            <div class="card shadow">
                                <!-- Card Header - Dropdown -->
                                <div class="card-header">

                                    <h6 class="m-0 font-weight-bold text-success" align="left"> Current Semester: </h6> @Html.DisplayFor(m => m.CurrentSemester)
                                </div>
                            </div>

                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6">
                            <div class="card shadow mb-4">

                                <div class="card-header">

                                    <h6 class="m-0 font-weight-bold text-success" align="left"> Date: </h6> @DateTime.Today

                                    


                                </div>
                            </div>

                        </div>

                    </div>


                    <!-- Content Row -->
                    <div class="row">
                        <div class="col-xl-8 col-lg-8 col-md-8">

                            <div class="row">
                                <!-- Earnings (Monthly) Card Example -->
                                <div class="col-xl-6 col-md-6 mb-4">
                                    <div class="card border-left-success shadow h-100 py-2">
                                        <div class="card-body">


                                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1"> Session Admissions</div>


                                            <div class="table-responsive">
                                                @if (Model.ApplicationsByProgTypes != null)
                                                {
                                                    <table class="table table-hover table-sm">
                                                        <thead>
                                                            <tr><th>Programme Type</th><th>Total</th></tr>
                                                        </thead>

                                                        <tbody>
                                                            @foreach (var i in Model.ApplicationsByProgTypes)
                                                            {
                                                                <tr><td>@i.ProgType</td><td>@string.Format("{0:#,##0}", i.Total) </td></tr>
                                                            }
                                                            
                                                        </tbody>
                                                    </table>
                                                }
                                                


                                            </div>


                                            <div class="h6 mb-0 font-weight-bold text-gray-800">TOTAL - @string.Format("{0:#,##0}", Model.TotalAdmissions)</div>



                                        </div>
                                    </div>
                                </div>
                                 
                                <div class="col-xl-6 col-lg-6 col-md-6 mb-4">
                                    <div class="card border-left-success shadow h-100 py-2">
                                        <div class="card-body">
                                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Current Active Students</div>
                                            <div class="table-responsive">

                                                <table class="table table-hover table-sm">
                                                    <thead>
                                                        <tr><th>Programme Type</th><th>Nos</th></tr>
                                                    </thead>

                                                    <tbody>
                                                        @if (Model.ActiveStudentProgTypes.Count > 0)
                                                        {
                                                            foreach(var i in Model.ActiveStudentProgTypes)
                                                            {
                                                                <tr><td>@i.ProgType</td><td>@string.Format("{0:#,##0}", i.Total) </td></tr>
                                                            }

                                                            
                                                        }
                                                        
                                                    </tbody>
                                                </table>


                                            </div>


                                            <div class="h6 mb-0 font-weight-bold text-gray-800">TOTAL - @string.Format("{0:#,##0}", Model.TotalStudents)</div>
                                        </div>
                                    </div>
                                </div>



                            </div>



                            <!-- Project Card Example -->
                            <div class="card shadow mb-4">
                               

                                    <div class="card-body" style="padding:2px;margin:0px">
                                        <div class="chart-pie" style="padding:0px;margin:0px">
                                            <canvas id="dognutcanvas"></canvas>
                                        </div>
                                        <div class="mt-4 text-center small">
                                            <span class="mr-2">
                                                <i class="fas fa-circle text-primary"></i> 
                                            </span>
                                             
                                        </div>
                                    </div>
                            </div>

                        </div>
                        <div class="col-xl-4 col-lg-4 col-md-4">

                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-success">Semester Registrations</h6>
                                </div>
                                <div class="card-body overflow-auto" style="max-height:350px">
                                    <div class="table-responsive">

                                        <table class="table table-hover table-sm">
                                            <thead>
                                                <tr><th>Prog Type</th><th>Total</th></tr>
                                            </thead>

                                            <tbody>
                                                @if (Model.SemesterRegistrationsByProgTypes != null)
                                                {
                                                    foreach (var i in Model.SemesterRegistrationsByProgTypes)
                                                    {
                                                        <tr>
                                                            
                                                             <td>@Html.DisplayFor(m => i.ProgType)</td>
                                                            <td>@string.Format("{0:#,##0;(#,##0)}", i.Total)</td>
                                                        </tr>
                                                    }
                                                    
                                                }

                                            </tbody>
                                        </table>


                                    </div>
                                </div>
                            </div>
                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-success">Today's Collections</h6>
                                </div>
                                <div class="card-body overflow-auto" style="max-height:350px">
                                    <div class="table-responsive">

                                        <table class="table table-hover table-sm">
                                            <thead>
                                                <tr><th>Item</th><th>Amount(N)</th></tr>
                                            </thead>

                                            <tbody>
                                                @if (Model.DailyCollectionSummaryByPaymentType != null)
                                                {
                                                    foreach (var i in Model.DailyCollectionSummaryByPaymentType)
                                                    {
                                                        <tr>

                                                            <td>@Html.DisplayFor(m => i.Item)</td>
                                                            <td>@string.Format("{0:#,##0.00;(#,##0.00)}", i.Amount)</td>
                                                        </tr>
                                                    }
                                                    <tr>
                                                        <td>Total</td>
                                                        <td>@string.Format("{0:#,##0.00;(#,##0.00)}", Model.DailyCollectionSummaryByPaymentType.Sum(a => a.Amount))</td>
                                                    </tr>
                                                }

                                            </tbody>
                                        </table>


                                    </div>
                                </div>
                            </div>
                         
                    </div>

                </div>

                    <div class="row">
                        <div class="col-xl-8 col-lg-8 col-md-8">

                            



                            <!-- Project Card Example -->
                            <div class="card shadow mb-4">


                                <div class="card-body" style="padding:2px;margin:0px">
                                    <div class="chart-pie" style="padding:0px;margin:0px">
                                        <canvas id="dognutcanvas"></canvas>
                                    </div>
                                    <div class="mt-4 text-center small">
                                        <span class="mr-2">
                                            <i class="fas fa-circle text-primary"></i>
                                        </span>

                                    </div>
                                </div>
                            </div>









                        </div>
                        <div class="col-xl-4 col-lg-4 col-md-4">

                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-success">Fee Collection</h6>
                                </div>
                                <div class="card-body overflow-auto" style="max-height:350px">
                                    <div class="table-responsive">

                                        <table class="table table-hover table-sm">
                                            <thead>
                                                <tr><th>Item</th><th>Amount(N)</th></tr>
                                            </thead>

                                            <tbody>
                                                @if (Model.SessionCollectionSummary != null)
                                                {
                                                    foreach (var i in Model.SessionCollectionSummary)
                                                    {
                                                        <tr>
                                                            <td>@( ((Int32)1) + Model.SessionCollectionSummary.ToList().IndexOf(i) )</td>
                                                            <td>@Html.DisplayFor(m => i.Item)</td>
                                                            <td>@string.Format("{0:#,##0.00;(#,##0.00)}", i.Amount)</td>
                                                        </tr>
                                                    }
                                                }

                                            </tbody>
                                        </table>


                                    </div>
                                </div>
                            </div>
                            <div class="card shadow border-left-success shadow mb-4">

                                <div class="card-body">
                                    <h6>Summary</h6>
                                    <div class="table-responsive">

                                        <table class="table table-hover table-sm">
                                            <thead>
                                                <tr><th>Programme Type</th><th>Nos</th></tr>
                                            </thead>

                                            <tbody>
                                                @if (Model.FeesCollectedByProgTypes.Count > 0)
                                                {
                                                    foreach (var i in Model.FeesCollectedByProgTypes)
                                                    {
                                                        <tr><td>@i.Title</td><td>@string.Format("{0:#,##0}", i.Amount) </td></tr>
                                                    }


                                                }

                                            </tbody>
                                        </table>
                                    </div>
                                    <h4 class="h6 font-weight-bold">Total- <span class="float-right font-weight-light">@string.Format("{0:#,##0.00;(#,##0.00)}", Model.TotalCollections)</span></h4>
                                </div>

                            </div>


                        </div>

                    </div>

                <!-- /.container-fluid -->
            </div>
            <!-- End of Main Content -->
            <!-- Footer -->
            <footer class="sticky-footer bg-success" style="color:#ffffff">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; @UserData.InstitutionName. powered by Korrh Solutions</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->
        </div>
        <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
   
    <!-- Bootstrap core JavaScript-->
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/chart")

    <script type="text/javascript">
	$(document).ready(function(){

	// Set new default font family and font color to mimic Bootstrap's default styling
Chart.defaults.global.defaultFontFamily = 'Nunito', '-apple-system,system-ui,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,sans-serif';
Chart.defaults.global.defaultFontColor = '#858796';

// Pie Chart Example
var ctx = document.getElementById("dognutcanvas");
var model = @Html.Raw(Json.Encode(ViewBag.items));
var myPieChart = new Chart(ctx, {
  type: 'doughnut',
  data: {
    labels: model,
    datasets: [{
      data: [@ViewBag.amounts],
        backgroundColor: ['#4e73df', '#1cc88a', '#36b9cc','#542a2a','#c0db48','#141410','#f7fa37','#4d5e3c','#33e314','#354d38'],
      hoverBackgroundColor: ['#2e59d9', '#17a673', '#2c9faf'],
      hoverBorderColor: "rgba(234, 236, 244, 1)",
    }],
  },
  options: {
    maintainAspectRatio: false,
    tooltips: {
      backgroundColor: "rgb(255,255,255)",
      bodyFontColor: "#858796",
      borderColor: '#dddfeb',
      borderWidth: 1,
      xPadding: 15,
      yPadding: 15,
      displayColors: false,
      caretPadding: 10,
    },
    legend: {
      display: false
    },
    cutoutPercentage: 80,
  },
});






	});
    </script>

    

</body>


</html>