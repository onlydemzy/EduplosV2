@model IEnumerable<Eduplos.DTO.BursaryModule.AccountsDTO>
@{
    ViewBag.Title = "SessionCollections";
    Layout = "~/Views/Shared/_A4ReportLayout.cshtml";
}
@if(Model.Count()==0)
{
    <h4>Oops no records found</h4>
}
else
{
    <h4> Session Fees Collection</h4>
    <p>Session: @ViewBag.sess</p>
    <table class="table table-responsive">
        <thead style="display: table-row-group">
            <tr>
                <th>S/N</th>
                <th>Code</th>
                <th>Account</th>
                <th>Amount{N}</th>
            </tr>
        </thead>
        <tbody>
            @{
                int sno = 0;
            }
            @foreach(var i in Model)
            {
                <tr>
                    <td>
                        @{ sno++; }
                    @sno
                </td>
                    <td style="text-align:center">@Html.DisplayFor(a=>i.AccountCode)</td>
                    <td>@Html.DisplayFor(a => i.Title)</td>
                    <td style="text-align:right">@string.Format("{0:#,##0.00;(#,##0.00)}", i.Amount)</td>
                    
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td></td>
                <td></td>
                <td>Total</td>
                <td style="text-align:right">@string.Format("{0:#,##0.00;(#,##0.00)}", Model.Sum(a=>a.Amount))</td>
            </tr>
        </tfoot>
    </table>
}