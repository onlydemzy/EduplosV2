
@{
    ViewBag.Title = "AddStudentToFeeExemption";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h3>Add Student To Fee Exemption</h3>
    <p>
        Please note: Student(s) exemption applies only to the current semester
    </p>
    
    <div class="form-group">
        <div class="col-md-3">
            <select data-bind="value:deptCode,options:depts,optionsValue:'DepartmentCode',optionsText:'Title', optionsCaption:'Select Department'" class="form-control"></select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3">
            <select data-bind="value:programCode,options:programs,optionsValue:'ProgrammeCode',optionsText:'Title', optionsCaption:'Select Programme'" class="form-control"></select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3">
            <button class="btn btn-success" data-bind="click:$root.getList">Fetch</button>
        </div>
    </div>

    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>RegNo</th>
                <th>Name</th>
                <th>Programme</th>
                <th>Amount Owed</th>
                <th>Exempt</th>
            </tr>
        </thead>
        <tbody data-bind="foreach:students">
            <tr>
                <td data-bind="text:Matricnumber"></td>
                <td data-bind="text:Name"></td>
                <td data-bind="text:Programme"></td>
                <td data-bind="text:Amount"></td>
                <td><input type="checkbox" data-bind="checked:Exempt"></td>
                
            </tr>
        </tbody>
    </table>
    <hr/>
    <div class="form-group">
        <div class="col-md-3">
            <button class="btn btn-success" data-bind="click:$root.submit">Submit</button>
        </div>
    </div>
</div>
<script src="~/Scripts/ViewModels/feeExemptionVM.js"></script>

