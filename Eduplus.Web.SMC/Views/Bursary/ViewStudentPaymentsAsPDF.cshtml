@model Eduplus.DTO.BursaryModule.FeesCollectionDTO
@{
    ViewBag.Title = "Student Payments";
    Layout = "~/Views/Shared/_A4ReportLayout.cshtml";
}
@if(Model==null)
{
    <h4>Oops no records found</h4>
}
else
{
    <div>
        <h5>@Model.Title</h5>
        <p>
            
            From @Model.FromDate.ToString("dd-MMM-yyyy") to @Model.ToDate.ToString("dd-MMM-yyyy");
        </p>

        <table class="table table-hover table-sm">
            <thead style="display: table-row-group">
                <tr>
                    <th>S/N</th>
                    <th>RegNo</th>
                    <th>Name</th>
                    <th>Date</th>
                    <th>Programme</th>
                    <th>TransRef</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int sno = 0;
                }
                @foreach (var p in Model.Details)
                {

                    <tr>
                        <td>
                            @{ sno++; }
                        @sno
                    </td>
                    <td>@Html.DisplayFor(a => p.RegNo)</td>
                    <td>@Html.DisplayFor(a => p.Name)</td>
                    <td>@p.PayDate.ToString("dd/MM/yyy")</td>
                    <td>@Html.DisplayFor(a => p.Programme)</td>
                    <td>@Html.DisplayFor(a => p.TransRef)</td>
                    <td style="text-align:right">@string.Format("{0:#,##0.00;(#,##0.00)}", p.Amount)</td>
                </tr>
                            }
            </tbody>
            <tfoot>
                <tr>
                    <td></td>
                    <td></td>
                    <td>Total</td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td style="text-align:right">
                        @string.Format("{0:#,##0.00;(#,##0.00)}", Model.Total)
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
                            }



