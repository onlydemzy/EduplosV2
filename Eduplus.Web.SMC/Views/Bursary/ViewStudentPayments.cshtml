
@{
    ViewBag.Title = "ViewStudentPayments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Select Payment Period</h3>
<div>

    <div class="col-mod-8">
        <div class="form-group">
            From:<div class="col-mod-6">
                <input type="date" data-bind="value:fromDate" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            To:<div class="col-mod-6">
                <input type="date" data-bind="value:toDate" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-mod-6">
                <select data-bind="value:feeType, options:feeTypes,optionsCaption:'Select Fee Type'" class="form-control"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-mod-6">
                <select data-bind="value:account, options:accounts,optionsValue:'AccountCode',optionsText:'Title',optionsCaption:'Select Account', visible:kill" class="form-control"></select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-mod-6">
                <select data-bind="value:progType, options:progTypes,optionsValue:'Type',optionsText:'Type',optionsCaption:'Select Programme Type'" class="form-control"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-mod-6">
                <select data-bind="value:deptCode, options:depts,optionsValue:'DepartmentCode',optionsText:'Title',optionsCaption:'Select Department'" class="form-control"></select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-mod-6">
                <select data-bind="value:report, options:reports,optionsCaption:'Generate Report as...'" class="form-control"></select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-mod-6">
                <button data-bind="click:$root.submit" class="btn btn-info">Generate</button>
            </div>
        </div>
    </div>

</div>
@Scripts.Render("~/Scripts/ViewModels/viewStudentPaymentsVM.js")