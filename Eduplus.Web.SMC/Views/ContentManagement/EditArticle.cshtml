@model Eduplus.DTO.ArticleModule.ArticleDTO
@{
    ViewBag.Title = "Edit Article";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="form-horizontal" style="padding-left:30px;">
    <h3>Edit Content</h3>
    @using (Html.BeginForm("EditArticle", "ContentManagement", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken();
        @Html.ValidationSummary(true);
        <div class="form-group">
            @if (Model != null)
            {
                if (Model.ImagePath != null)
                {
                     
                    <img src='@Model.ImagePath' style="max-width:200px; max-height:200px;" />

                }
            }
            
            <img id="output" style="max-height:200px; max-width:200px;" />
            <input type="file" accept="image/*" onchange="loadfile(event)" name="image" id="image" value="Choose File" />
            @Html.TextBoxFor(m => m.ImageTitle, new { @class = "form-control", placeholder = "Picture description" })
        </div>

        <div class="form-group">
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Title" })
            @Html.HiddenFor(m=>m.ArticleId)
        </div>
        <div class="form-group">
            @Html.DropDownList("types", null, "Article Type", new { @class = "form-control"})
        </div>
        <div class="form-group">
            @Html.DropDownList("priority", null, "Priority", new { @class = "form-control"})
        </div>
        <div>
            @Html.TextAreaFor(m => m.Content)
        </div>
        <div class="form-group">
            @Html.TextBoxFor(m => m.WrittenBy, new { @class = "form-control", placeholder = "Author" })
        </div>
        <div class="form-group">
            <input type="date" name="date" id="date" class="form-control" placeholder="Date, Format:dd/mm/yyyy" />
        </div>
        <hr />
        <div class="form-group">
            <button class="btn btn-success">Submit</button>
        </div>
        <div class="form-group">
            <a class="btn btn-danger" href="@Url.Action("Articles","ContentManagement")">Cancel</a>
        </div>
    }
</div>

<script src="~/Scripts/tinymce/tinymce.min.js"></script>
<script>
    var loadfile = function (event) {

        var output = document.getElementById('output');
        output.src = URL.createObjectURL(event.target.files[0]);
    };

</script>

