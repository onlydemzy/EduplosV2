@model Eduplus.Domain.CoreModule.UserData
@{
    ViewBag.Title = "InstitutionData";
}
<div class="row">
    <h2>InstitutionData</h2>
    @using (Html.BeginForm("InstitutionData", "Administration", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
    {
        <div class="form-group">
            <img id="output" style="max-height:200px; max-width:200px;" />
            <input type="file" accept="image/*" onchange="loadfile(event)" name="image" id="image" value="Choose File" />
        </div>
        <div class="form-group">
            @Html.Label("InstitutionName:", new { @class = "col-md-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(a => a.InstitutionName, new { @class = "form-control" })

            </div>
        </div>
        <div class="form-group">
            @Html.Label("AffiliateInfo:", new { @class = "col-md-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(a => a.AffiliateInfo, new { @class = "form-control" })

            </div>
        </div>
        <div class="form-group">
            @Html.Label("InstitutionType:", new { @class = "col-md-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(a => a.InstitutionType, new { @class = "form-control" })

            </div>
        </div>
        <div class="form-group">
            @Html.Label("Address:", new { @class = "col-md-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(a => a.Address, new { @class = "form-control" })

            </div>
        </div>
        <div class="form-group">
            @Html.Label("Phone1:", new { @class = "col-md-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(a => a.Phone, new { @class = "form-control" })

            </div>
        </div>
        <div class="form-group">
            @Html.Label("Phone2:", new { @class = "col-md-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(a => a.Phone2, new { @class = "form-control" })

            </div>
        </div>
        <div class="form-group">
            @Html.Label("Email1:", new { @class = "col-md-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(a => a.Email1, new { @class = "form-control" })

            </div>
        </div>
        <div class="form-group">
            @Html.Label("Url:", new { @class = "col-md-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(a => a.Url, new { @class = "form-control" })

            </div>
        </div>
        <div class="form-group">
            @Html.Label("InstitutionName:", new { @class = "col-md-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(a => a.InstitutionName, new { @class = "form-control" })

            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-info" />
        </div>
    }
    
</div>
<script>
    var loadfile = function (event) {

        var output = document.getElementById('output');
        output.src = URL.createObjectURL(event.target.files[0]);
    };

</script>

