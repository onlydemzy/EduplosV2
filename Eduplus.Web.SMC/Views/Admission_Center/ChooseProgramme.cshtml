<!DOCTYPE html>
@{ Layout = null;}
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Select Programme - @UserData.InstitutionName</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Content/vertical-menu.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid" style="padding:0px 0px;">
        <p style="text-align:center">
            @if (UserData.Logo != null)
            {
                var base64 = Convert.ToBase64String(UserData.Logo);
                var imgSrc = String.Format("data:image/jpeg;base64,{0}", base64);
                <img src='@imgSrc' style="width:100px; height:100px;" />

            }
            <h3 style="text-align:center; border-top:solid; border:0px 2px 0px 2px; border-color:#0e983b;
                            color:#08581b;">
                @UserData.InstitutionName Addmissions Management Centre
            </h3>
        </p>
        <div class="row">

            <div id="hj" style="background-color:#119d43; height:20px;">
            </div>
            <div id="hkj" style="background-color:#0e983b;height:25px;">
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                
            </div>
            <div class="col-md-6">
                <h4>Select the programme type you wish to apply for and click on the 'Proceed button'</h4>
                @using (Html.BeginForm("ChooseProgramme", "Admission_Center", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <div class="form-group">
                        @Html.Label("Choose Programme Type", new { @class = "form control" })
                    </div>
                    <div class="form-group">
                        @Html.DropDownList("types", null, new { @class = "form-control" })
                    </div>


                    <div class="form-group">
                        <input type="submit" class="btn btn-success btn-block" value="Proceed" />
                    </div>

                }
            </div>
            <div class="col-md-3">
               
            </div>

        </div>

        <footer style="background-color:#0a5e23; color:#fff;">
            For support/Enquiries
            <p>&copy; @DateTime.Now.Year - Akwa Ibom State College of Education, Afaha Nsit IT Directorate</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/knockout")
    
</body>
</html>











