
@{
    ViewBag.Title = "Student Enrolments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="form-horizontal">

    <div class="form-group">
        <div class="col-md-10">
            <select data-bind="value:session,options:sessions,optionsValue:'Title',optionsText:'Title',optionsCaption:'Select Session'" class="form-control"></select>

        </div>

    </div>

    <div class="form-group">
        <div class="col-md-10">
            <select data-bind="value:dept,options:depts,optionsValue:'DepartmentCode',optionsText:'Title',optionsCaption:'Select Department'" class="form-control"></select>
        </div>

    </div>
    <div class="form-group">
        <div class="col-md-10">
            <select data-bind="value:gender,options:genders,optionsCaption:'Select Gender'" class="form-control"></select>
        </div>

    </div>
    <div class="form-group">
        <button class="btn btn-info" data-bind="click:fetch">Fetch</button>
    </div>

</div>
<div class="row">
    <div class="col-md-10">
        <div class="form-group">
            <button class="btn btn-danger" data-bind="click:fetchSummary">Enrolment Summary</button>
        </div>

        <table class="table table-sm">
            <thead>
                <tr>
                    <th>Department</th>
                    <th>Gender</th>
                    <th>Enrolment</th>
                </tr>
            </thead>
            <tbody data-bind="foreach:enrolments">
                <tr>
                    <td data-bind="text:Department"></td>
                    <td data-bind="text:Description"></td>
                    <td data-bind="text:TotalEnrollment"></td>
                </tr>
            </tbody>
        </table>

    </div>
    
</div>

@Scripts.Render("~/Scripts/ViewModels/viewStudentEnrollment.js")