
@{Layout = "~/Views/Shared/_Layout.cshtml";}
@{
    ViewBag.Title = "Add Student";
}


<div class="col-md-6">

    <div class="form-horizontal">

        <h3 style="color:#08581b">Admit New Student</h3>
        <hr />
        <div class="form-group">

            <div class="col-md-3">
                <select data-bind="value:Title, options:Titles, optionsCaption:'Your Title'" class="form-control"></select>
            </div>
        </div>
        <div class="form-group">

            <div class="col-md-12">
                <input type="text" data-bind="value: Surname" class="form-control" placeholder="Surname" />
            </div>
        </div>
        <div class="form-group">

            <div class="col-md-12">
                <input type="text" data-bind="value:Firstname" class="form-control" placeholder="First name" />

            </div>
        </div>
        <div class="form-group">

            <div class="col-md-12">
                <input type="text" data-bind="value:Middlename" class="form-control" placeholder="Middle name" />
            </div>
        </div>
        <div class="form-group">

            <div class="col-md-4">
                <select data-bind="value:MaritalStatus, options:MStatus, optionsCaption:'Your marital status'" class="form-control"></select>
            </div>
        </div>
        <div class="form-group">

            <div class="col-md-3">
                <select data-bind="value:Sex, options:Sexes, optionsCaption:'I am...'" class="form-control"></select>
            </div>
        </div>

        <div class="form-group">

            <div class="col-md-12">
                <input type="text" data-bind="value:ResidentialAddress" class="form-control" placeholder="Residential Address" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                <select data-bind="value:Country, options:Countries,optionsValue:'Country', optionsCaption:'Select your Country'" class="form-control"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                <select data-bind="value:State, options:States,optionsValue:'State', optionsCaption:'Select your State'" class="form-control"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <select data-bind="value:Lg, options:Lgs, optionsValue:'Lga', optionsCaption:'Select your lga'" class="form-control"></select>
            </div>
        </div>
        <div class="form-group">

            <div class="col-md-12">
                <input type="email" data-bind="value:Email" class="form-control" placeholder="Email Address" />
            </div>
        </div>
        <div class="form-group">

            <div class="col-md-10">
                <input type="tel" data-bind="value:Phone" class="form-control" placeholder="Phone number" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                Birth Date
            </div>

            <div class="col-md-2">
                <select data-bind="value:BDay,options:days, optionsCaption:'Day'" class="form-control"></select>
            </div>
            <div class="col-md-3">
                <select data-bind="value:BMonth,options:months, optionsCaption:'-Month-'" class="form-control"></select>
            </div>
            <div class="col-md-3">
                <select data-bind="value:BYear,options:yrs, optionsCaption:'-Year-'" class="form-control"></select>
            </div>
        </div>

        <hr />
        <h4><label class="label label-success">Sponsor Information</label></h4>
        <div class="form-group">

            <div class="col-md-12">
                <input type="text" data-bind="value:NextKin" class="form-control" placeholder="Sponsor" />
            </div>
        </div>
        <div class="form-group">

            <div class="col-md-12">
                <input type="text" data-bind="value:KinMail" class="form-control" placeholder="Sponsor Email" />
            </div>
        </div>
        <div class="form-group">

            <div class="col-md-12">
                <input type="tel" data-bind="value:KinPhone" class="form-control" placeholder="Sponsor Phone Number" />
            </div>
        </div>
        <div class="form-group">

            <div class="col-md-12">
                <input type="text" data-bind="value:KinAddress" class="form-control" placeholder="Sponsor's Address" />
            </div>
        </div>
        <hr />
        <h4><label class="label label-success">Referee's Information</label></h4>
        <div class="form-group">

            <div class="col-md-12">
                <input type="text" data-bind="value:Referee" class="form-control" placeholder="Referee full Name" />
            </div>
        </div>
        <div class="form-group">

            <div class="col-md-12">
                <input type="text" data-bind="value:RefereeMail" class="form-control" placeholder="Referee Email" />
            </div>
        </div>
        <div class="form-group">

            <div class="col-md-12">
                <input type="tel" data-bind="value:RefereePhone" class="form-control" placeholder="Referee Phone Number" />
            </div>
        </div>
        <div class="form-group">

            <div class="col-md-12">
                <input type="tel" data-bind="value:RefereeAddress" class="form-control" placeholder="Referee's Address" />
            </div>
        </div>

        <h4><label class="label label-success">Academics</label></h4>
        <div class="form-group">

            <div class="col-md-12">
                <input type="text" data-bind="value:JambRegNumber" class="form-control" placeholder="Jamb Reg. Number" />
            </div>
        </div>

        <div class="form-group">

            <div class="col-md-12">
                <select data-bind="value:SessionId, options:sessions,optionsValue:'SessionId',optionsText:'Title', optionsCaption:'Admitted Session'" class="form-control"></select>
            </div>


        </div>

        <div class="form-group">

            <div class="col-md-12">
                <select data-bind="value:EntryMode, options:EntryModes, optionsCaption:'Mode of Entry'" class="form-control"></select>
            </div>


        </div>


        <div class="form-group">

            <div class="col-md-12">
                <select data-bind="value:FacultyCode, options:Faculties, optionsValue:'FacultyCode', optionsText:'Faculty', optionsCaption:'Select Faculty'" class="form-control"></select>
            </div>


        </div>
        <div class="form-group">

            <div class="col-md-12">
                <select data-bind="value:DepartmentCode, options:Departments, optionsValue:'DepartmentCode', optionsText:'Title', optionsCaption:'Select Department'" class="form-control"></select>
            </div>

        </div>
        <div class="form-group">

            <div class="col-md-12">
                <select data-bind="value:ProgrammeCode, options:Programmes, optionsValue:'ProgrammeCode', optionsText:'Fullname', optionsCaption:'Select Programme'" class="form-control"></select>
            </div>
        </div>
        <div class="form-group">

            <div class="col-md-12">
                <select data-bind="value:ProgrammeType, options:Types, optionsCaption:'Programme Type'" class="form-control"></select>
            </div>
        </div>

        <div class="form-group">

            <div class="col-md-12">
                <select data-bind="value:CurrentLevel, options:Levels, optionsCaption:'Level'" class="form-control"></select>
            </div>

        </div>
        <div class="form-group">

            <div class="col-md-12">
                <select data-bind="value:Duration, options:durations, optionsCaption:'Study Duration'" class="form-control"></select>
            </div>

        </div>
        <div class="form-group">
            <button data-bind="click:submit, disabled:Kill" class="btn btn-success">Submit</button>
        </div>

    </div>
</div>

<div data-bind="loadingWhen: isLoading"></div>


@Scripts.Render("~/Scripts/ViewModels/addStudentVM.js")

<style>
    .validationMessage {
        color: red;
        font-size: 1.0em;
    }
</style>



