﻿
@{
    ViewBag.Title = "New Result Complain";

}

<div class="col-md-10">

    <div class="row form-inline">
        <div class="form-group">
            <div class="col-md-3">
                <select data-bind="value:SessionId,options:sessions,optionsValue:'SessionId',optionsText:'Title',optionsCaption:'--Select Session--'" class="form-control"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                <select data-bind="value:SemesterId,options:semesters,optionsValue:'SemesterId',optionsText:'Title',optionsCaption:'--Select Semester--'" class="form-control"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                <select data-bind="value:dept,options:depts,optionsValue:'DepartmentCode',optionsText:'Title',optionsText:'Title',optionsCaption:'--Select Department--', visible:show" class="form-control"></select>
            </div>
        </div>
    </div>

    <div class="row form-inline" style="margin-top:20px">

        <div class="form-group">
            <div class="col-md-3">
                <select data-bind="value:Programme,options:programmes,optionsText:'Title',optionsText:'Title',optionsCaption:'--Select Programme--'" class="form-control"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                <select data-bind="value:CourseId,options:courses,optionsValue:'CourseId',optionsText:'CourseCode',optionsCaption:'--Select Course--'" class="form-control"></select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-3">
                <input data-bind="value:MatricNumber" class="form-control" placeholder="Student Matric Number"/>
            </div>
            <button data-bind="click:fetchStudentScore" class="btn btn-info">Fetch Score</button>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                <button data-bind="click:fetchStudentScore" class="btn btn-info">Fetch Score</button>
            </div>
            
        </div>
    </div>

    <div class="row col-md-5">
         
        <img src="~/Content/images/15.gif" data-bind="visible:Kill" />
        <hr />
        <table class="table table-striped table-sm" style="border:none;">
            <thead>
                <tr>
                     
                    <th>Old CA1</th>
                    <th>Old CA2</th>
                    <th>Old Exam</th>
                    <th>Old Grade</th>
                </tr>
            </thead>
            <tr>
                    
                    <td data-bind="text:OldCA1"></td>
                    <td  data-bind="text:OldCA2"></td>
                    <td  data-bind="text:OldExam"></td>
                <td data-bind="text:Grade"></td>
                </tr>
            
        </table>
    </div>
    
    <div class="row">
        <div class="form-group">
            <textarea data-bind="value:Complain" class="form-control" placeholder="Enter Issue description here"></textarea>
        </div>    
    </div>
    
</div>
@Scripts.Render("~/Scripts/ViewModels/resultComplainVM.js")